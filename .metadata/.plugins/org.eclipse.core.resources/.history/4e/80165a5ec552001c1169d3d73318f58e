package com.casestudy.project.controller;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.casestudy.project.model.Cart;
import com.casestudy.project.services.CartServiceImpl;

@RestController
@RequestMapping("/resource")
public class CartResource {

   @Autowired
   CartServiceImpl cartService;
   
   public Cart getCartById(int cardId) {
   
	   return cartService.getCartById(cardId);
   }
   public Cart updateCart(Cart cart) {
	   return cartService.updateCart(cart);
   }
   
   public List<Cart> getAllcarts(){
	   return cartService.getAllcarts();
   }
		

}
