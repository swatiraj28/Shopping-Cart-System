port: 8081
   
spring:
  cloud:
    gateway:
      routes:
        #Route Mapping
      - id: moviecatalog              #RouteIdentifier
        uri: http://localhost:9000/         #Respective microservice URL which needs to be mapped
         #Request Context Path Mapping
        predicates:
        - Path=/catalog/**          
        
        #Route Mapping - With out Filter
      - id: movieinfo
        uri: http://localhost:8082/
        predicates:
        - Path=/movies/**
        
        #Route Mapping - With out Filters 
      - id: ratingsdata
        uri: http://localhost:8085/
        predicates:
        - Path=/ratingsdata/**

  application:
    name: Eureka-with-api-gateway