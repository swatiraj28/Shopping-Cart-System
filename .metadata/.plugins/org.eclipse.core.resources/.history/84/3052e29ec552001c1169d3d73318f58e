package com.casestudy.project.services;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;

import com.casestudy.project.model.Cart;
import com.casestudy.project.repository.CartRepository;

public class CartServiceImpl implements CartService {
	
	@Autowired
	CartRepository cartRepo;

	@Override
	public Cart getCartById(int cardId) {
	
		return cartRepo.findByCartId(cardId);
	}

	@Override
	public Cart updateCart(Cart cart) {
		return cartRepo.save(cart);
		
	}

	@Override
	public List<Cart> getAllcarts() {
		return cartRepo.findAll();
	}

	@Override
	public double cartTotal(Cart cart) {
		
		return cartRepo.count();
	}

	@Override
	public Cart addCart(Cart cart) {
		
		return cartRepo.save(cart);
	}

}
